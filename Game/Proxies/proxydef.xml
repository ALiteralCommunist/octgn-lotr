<?xml version="1.0" encoding="utf-8" ?>
<templates>
  <blocks>
    <block type="text" id="name">
      <location x="70" y="23"/>
      <text color="#000000" size="18"/>
      <wordwrap height="20" width="180" shrinktofit="True"/>
    </block>
    <block type="text" id="sidename">
      <location x="23" y="75" rotate="270"/>
      <text color="#000000" size="18"/>
    </block>
    <block type="text" id="subname">
      <location x="70" y="46"/>
      <text color="#000000" size="13"/>
    </block>
    <block type="text" id="types">
      <location x="60" y="290"/>
      <text color="#000000" size="16"/>
      <wordwrap height="20" width="235" align="center" valign="center" shrinktofit="True"/>
    </block>
    <block type="text" id="types_pos">
      <location x="100" y="290"/>
      <text color="#000000" size="16"/>
      <wordwrap height="20" width="200" align="center" valign="center" shrinktofit="True"/>
    </block>    
    <block type="text" id="twilight">
      <location x="18" y="18"/>
      <text color="#FFFFFF" size="25"/>
      <wordwrap height="45" width="45" align="center" valign="center"/>
    </block>
    <block type="text" id="strength">
      <location x="22" y="314"/>
      <text color="#FFFFFF" size="25"/>
      <wordwrap height="45" width="45" align="center" valign="center"/>
    </block>
    <block type="text" id="vitality">
      <location x="22" y="372"/>
      <text color="#FFFFFF" size="25"/>
      <wordwrap height="45" width="45" align="center" valign="center"/>
    </block>
    <block type="text" id="resistance">
      <location x="22" y="422"/>
      <text color="#FFFFFF" size="25"/>
      <wordwrap height="45" width="45" align="center" valign="center"/>
    </block>
    <block type="text" id="gametext">
      <location x="80" y="330"/>
      <text color="#000000" size="16"/>
      <wordwrap height="126" width="250" />
    </block>    
  </blocks>
  <template src="Proxies/companion_shire.jpg" default="True">
    <matches>
      <match name="Card Type" value="Companion" />
      <match name="Card Type" value="Companion • Man" />
    </matches>
    <textblocks>
      <link block="name">
        <property name="Name" />
      </link>
      <link block="subname">
        <property name="Subname" />
      </link>
      <link block="types">
        <property name="Card Type" />
      </link>      
      <link block="twilight">
        <property name="Twilight" />
      </link>
      <link block="strength">
        <property name="Strength" />
      </link>
      <link block="vitality">
        <property name="Vitality" />
      </link>
      <link block="resistance">
        <property name="Resistance" />
      </link>
      <link block="gametext">
        <property name="Game Text" />
      </link>      
    </textblocks>
  </template>
  <!-- -->
  <template src="Proxies/posession_gandalf.jpg" default="True">
    <matches>
      <match name="Card Type" value="Possession • Hand Weapon" />
    </matches>
    <textblocks>
      <link block="sidename">
        <property name="Name" />
      </link>
      <link block="types_pos">
        <property name="Card Type" />
      </link>      
      <link block="twilight">
        <property name="Twilight" />
      </link>
      <link block="strength">
        <property name="Strength" />
      </link>
      <link block="vitality">
        <property name="Vitality" />
      </link>
      <link block="resistance">
        <property name="Resistance" />
      </link>
      <link block="gametext">
        <property name="Game Text" />
      </link>      
    </textblocks>
  </template>  
</templates>